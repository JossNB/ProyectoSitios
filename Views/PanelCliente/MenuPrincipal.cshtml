@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Dashboard Tixtly</title>
    <link rel="stylesheet" href="styles.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css">
    <style>
        body {
            background-image: linear-gradient(rgba(0, 0, 0, 0.8), rgba(0, 0, 0, 0.8)), url('@Url.Action("ObtenerFondoMenu", "PanelCliente")');
            background-size: 100%;
            color: #fff;
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
        }

        header {
            background-color: #adff44;
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding: 10px 20px;
        }

        .logo {
            font-size: 24px;
            font-weight: bold;
            color: #000;
        }

        .search-bar input {
            padding: 5px;
        }

        .search-bar button {
            background-color: #000;
            color: #c6ff00;
            border: none;
            padding: 5px 10px;
            cursor: pointer;
        }

        .user-menu {
            display: flex;
            align-items: center;
            gap: 10px;
            font-weight: bold;
            color: #000;
        }

        nav {
            background-color: #222;
            padding: 10px;
        }

            nav ul {
                list-style: none;
                display: flex;
                gap: 15px;
                justify-content: center;
                padding: 0;
                margin: 0;
            }

                nav ul li {
                    cursor: pointer;
                    color: #c6ff00;
                }

        main {
            padding: 20px;
            text-align: center;
        }

        .dashboard {
            display: flex;
            flex-wrap: wrap;
            justify-content: center;
            gap: 20px;
            margin-top: 20px;
        }

        .card {
            background-color: #0e0e0e;
            padding: 20px;
            width: 180px;
            text-align: center;
            border-radius: 10px;
            border: 1px solid #343433;
        }

            .card i {
                font-size: 2rem;
                color: #adff44;
            }

            .card p{
                font-size: 14px;
                margin-bottom: 25px;
            }

            .card h3{
                font-size: 16px;
                margin-bottom: 30px;
            }
          
            .card .arrow {
                display: inline-flex;
                align-items: center;
                justify-content: center;
                width: 40px;
                height: 40px;
                background-color: #0e0e0e;
                color: #ffffff;
                border-radius: 50%;
                font-size: 24px;
                margin-top: 10px;
                border: 2px solid #ffffff;
            }

        .header .logo-sitio {
            max-width: 100%;
            height: auto;
            max-height: 10px;
            object-fit: contain;
        }

        .titulo-compras{
            margin-right: 800px;
            margin-top: 40px;
        }

        .titulo-bienvenida{
            margin-right: 650px;
        }
    </style>
</head>
<body>
    <header>
        <img src="@Url.Action("ObtenerLogoSitio", "Cliente")" alt="Logo del sitio" class="logo-sitio" style="max-height: 85px; width: auto;" />
  
        <div class="search-bar">
            <input type="text" placeholder="Buscar">
            <button>BUSCAR</button>
        </div>
        <div class="user-menu">
            <i class="fas fa-user"></i> NOMBRE <i class="fas fa-chevron-down"></i>
        </div>
    </header>
    <nav>
        <ul>
            <li>Conciertos</li>
            <li>Deportes</li>
            <li>Teatro</li>
            <li>Comedia</li>
            <li>Culturales</li>
            <li>Familiares</li>
            <li>Congresos</li>
            <li>Festivales</li>
            <li>Puntos de venta</li>
            <li>Ayuda</li>
        </ul>
    </nav>
    <main>
        <h2 class="titulo-bienvenida">Bienvenido: <span>NOMBRE</span></h2>
        <div class="dashboard">
            <div class="card">
                <h3>Información personal</h3>
                <i class="fas fa-user"></i>               
                <p>Mantenimiento de información personal.</p>
                <div class="arrow"><i style="color:#ffffff" class="fas fa-arrow-right"></i></div>
            </div>
            <div class="card">
                <h3>Cambio de contraseña</h3>
                <i class="fas fa-lock"></i>
                <p>Modifique su contraseña actual.</p>
                <div class="arrow"><i style="color:#ffffff" class="fas fa-arrow-right"></i></div>
            </div>
            <div class="card">
                <h3>Actividad reciente</h3>
                <i class="fas fa-book"></i>             
                <p>Consulte su actividad reciente.</p>
                <div class="arrow"><i style="color:#ffffff" class="fas fa-arrow-right"></i></div>
            </div>
            <div class="card">
                <h3>Notificaciones</h3>
                <i class="fas fa-bell"></i>               
                <p>Reciba actualizaciones de sus eventos.</p>
                <div class="arrow"><i style="color:#ffffff" class="fas fa-arrow-right"></i></div>
            </div>
        </div>
        <h2 class="titulo-compras">Compras</h2>
        <div class="dashboard">
            <div class="card">
                <h3>Historial de compras</h3>
                <i class="fas fa-shopping-cart"></i>                
                <p>Informe de sus compras realizadas.</p>
                <div class="arrow"><i style="color:#ffffff" class="fas fa-arrow-right"></i></div>
            </div>
            <div class="card">
                <h3>Mis tiquetes</h3>
                <i class="fas fa-ticket-alt"></i>             
                <p>Información de sus tiquetes disponibles.</p>
                <div class="arrow"><i style="color:#ffffff" class="fas fa-arrow-right"></i></div>
            </div>
            <div class="card">
                <h3>Cancelaciones</h3>
                <i class="fas fa-times-circle"></i>             
                <p>Gestione la cancelación de sus tiquetes.</p>
                <div class="arrow"><i style="color:#ffffff" class="fas fa-arrow-right"></i></div>
            </div>

            <div class="card" style="visibility: hidden;"></div>

        </div>
    </main>
</body>
</html>
